{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "."  // Helps resolve paths relative to the root directory
  },
  "paths": {
    "db/*": ["../../packages/db/*"]  // Ensure this path is correct
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
